# Database
DATABASE_URL="postgresql://dca_user:dca_password@localhost:5432/dca_strategy_db"

# Redis (optional, for caching)
REDIS_URL="redis://localhost:6379"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# API URLs
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Exchange API Keys (these should be encrypted in production)
BINANCE_API_KEY="your-binance-api-key"
BINANCE_API_SECRET="your-binance-api-secret"

COINBASE_API_KEY="your-coinbase-api-key"
COINBASE_API_SECRET="your-coinbase-api-secret"
COINBASE_PASSPHRASE="your-coinbase-passphrase"

KRAKEN_API_KEY="your-kraken-api-key"
KRAKEN_API_SECRET="your-kraken-api-secret"

# Notification Services
LINE_CHANNEL_ACCESS_TOKEN="your-line-channel-access-token"
LINE_CHANNEL_SECRET="your-line-channel-secret"

TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# Email Service (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Google Sheets
GOOGLE_CLIENT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_SPREADSHEET_ID="your-spreadsheet-id"

# Application Settings
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"

# External Services
TRADINGVIEW_WEBHOOK_SECRET="your-tradingview-webhook-secret"

# Development
SKIP_EMAIL_VERIFICATION=true
ENABLE_TEST_MODE=true